<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="author" content="" />
        <title>{% block title %}Fran Vega | Desarrollador web Bilbao{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="css/bootstrap-social.css" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet" />

        <link href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
        <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Raleway:400,100,200,300">
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        {% block styles %}{% endblock %}
    </head>
    <body>
        <!-- navigation panel -->
        <div id="main-nav" class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-main">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ url('homepage') }}"><span style="color:#ea8825">fran.</span><span style="color:black">vega</span></a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse-main">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#about">Sobre mi</a></li>
                        <li><a href="#services">Servicios</a></li>
                        <li><a href="#portfolio">Portfolio</a></li>
                        <li><a href="{{ url('blog_index') }}">Blog</a></li>
                        <li><a href="#contact" class="scroll">Contacto</a></li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </div>

        {% block body %}{% endblock %}
        <footer id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <p>Fran Vega</p>
                    </div>
                    <div class="col-md-4 social">
                        <ul class="icons list-inline">
                            <li><a class="btn btn-github btn-lg"><i class="fa fa-github"></i></a></li>
                           <li><a class="btn btn-social-icon btn-linkedin"><i class="fa fa-linkedin"></i></a></li>
                            <li><a class="btn btn-social-icon btn-twitter"><i class="fa fa-twitter"></i></a></li>
                            <a onclick="_gaq.push(['_trackEvent', 'btn-social-icon', 'click', 'btn-lg']);" class="btn btn-social-icon btn-lg btn-pinterest"><i class="fa fa-pinterest"></i></a>
                        </ul>
                    </div>
                    <div class="col-md-4 social">
                        <span>Codigo fuente</span>
                    </div>
                </div>
            </div>
        </footer>
        {% block javascripts %}
        <script src="{{ asset('js/jquery-1.8.2.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/jquery.easypiechart.js') }}"></script>
        <script>
            $(document).ready(function(e) {
                var index=0;
                $(document).scroll(function(){
                    var top = $('.technical').height()-$(window).scrollTop();
                    if(top<-300){
                        if(index==0){
                            $('.chart').easyPieChart({
                                barColor: '#ea8825',
                                easing: 'easeOutBounce',
                                lineWidth: 3,
                                onStep: function(from, to, percent) {
                                    $(this.el).find('.percent').text(Math.round(percent));
                                }
                            });
                        }
                        index++;
                    }
                });
            });

            // chart loading
            $(window).load(function() {
                var chart = window.chart = $('.chart').data('easyPieChart');
                $('.js_update').on('click', function() {
                    chart.update(Math.random()*100);
                });
            });

            //scroll
            $('a.scroll').click(function(e){
                e.preventDefault();
                $('html, body').stop().animate({scrollTop: $($(this).attr('href')).offset().top}, 1000);
            });
        </script>
        {% endblock %}
    </body>
</html>
